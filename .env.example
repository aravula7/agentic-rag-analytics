# Database (Supabase)
DB_HOST=db.xxxxx.supabase.co
DB_PORT=5432
DB_NAME=postgres
DB_USER=postgres
DB_PASSWORD=your_supabase_password

# Supabase Storage
S3_ENDPOINT_URL=https://xxxxx.supabase.co
S3_BUCKET_NAME=rag-reports
AWS_ACCESS_KEY_ID=your_access_key_id
AWS_SECRET_ACCESS_KEY=your_secret_access_key
AWS_REGION=us-east-1

# Upstash Redis
UPSTASH_REDIS_REST_URL=https://xxxxx.upstash.io
UPSTASH_REDIS_REST_TOKEN=your_upstash_token
REDIS_CACHE_TTL=86400  # 24 hours
ENABLE_CACHE=True

# ChromaDB (Local)
CHROMA_HOST=localhost
CHROMA_PORT=8082
CHROMA_COLLECTION=agentic_rag_analytics_schema
CHROMA_PERSIST_DIR=./embeddings

# LLM APIs
# OpenAI (for Router, Embeddings)
OPENAI_API_KEY=sk-...
OPENAI_GENERAL_MODEL=gpt-4o
OPENAI_EMBEDDING_MODEL=text-embedding-3-small
OPENAI_MAX_TOKENS=500
# Anthropic (for SQL generation)
ANTHROPIC_API_KEY=sk-ant-...
ANTHROPIC_SQL_MODEL=claude-haiku-4-20250514
ANTHROPIC_MAX_TOKENS=1000

# Langfuse (Optional)
LANGFUSE_PUBLIC_KEY=pk-...
LANGFUSE_SECRET_KEY=sk-...
LANGFUSE_BASE_URL=https://us.cloud.langfuse.com
LANGFUSE_ENABLED=True

# Email
EMAIL_PROVIDER=gmail
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASSWORD=your_app_password

# Application Settings
API_HOST=0.0.0.0
API_PORT=8001
STREAMLIT_PORT=8501
LOG_LEVEL=INFO

# Agent Configuration
SQL_RETRY_MAX=3
QUERY_TIMEOUT=30