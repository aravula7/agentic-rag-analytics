# ===== Database (Supabase PostgreSQL) =====
DB_HOST=db.xxxxx.supabase.co
DB_PORT=5432
DB_NAME=postgres
DB_USER=postgres
DB_PASSWORD=your_supabase_password

# ===== S3 / MinIO =====
S3_ENDPOINT_URL=http://localhost:9000
S3_BUCKET_NAME=rag-reports
AWS_ACCESS_KEY_ID=minioadmin
AWS_SECRET_ACCESS_KEY=minioadmin
AWS_REGION=us-east-1

# ===== LLM APIs =====
# OpenAI (for Router, Email, Embeddings)
OPENAI_API_KEY=your_openai_key
OPENAI_GENERAL_MODEL=gpt-4o
OPENAI_EMBEDDING_MODEL=text-embedding-3-small
OPENAI_MAX_TOKENS=500

# Anthropic (for SQL generation only)
ANTHROPIC_API_KEY=your_anthropic_key
ANTHROPIC_SQL_MODEL=claude-haiku-4-20250514
ANTHROPIC_MAX_TOKENS=1000

# ===== Redis (Caching) =====
REDIS_HOST=localhost
REDIS_PORT=6380
REDIS_PASSWORD=
REDIS_CACHE_TTL=86400

# ===== Chroma (Vector DB) =====
CHROMA_HOST=localhost
CHROMA_PORT=8082
CHROMA_COLLECTION=schema_embeddings
CHROMA_PERSIST_DIR=./embeddings

# ===== Langfuse (Monitoring) =====
LANGFUSE_PUBLIC_KEY=your_public_key
LANGFUSE_SECRET_KEY=your_secret_key
LANGFUSE_HOST=https://cloud.langfuse.com

# ===== Email Provider =====
EMAIL_PROVIDER=gmail
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASSWORD=your_app_password

# ===== Application =====
API_HOST=0.0.0.0
API_PORT=8001
STREAMLIT_PORT=8501
LOG_LEVEL=INFO

# ===== Agent Configuration =====
SQL_RETRY_MAX=3
QUERY_TIMEOUT=30
ENABLE_CACHE=true